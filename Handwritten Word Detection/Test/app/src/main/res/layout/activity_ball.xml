<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anik.test.ActivityAlphabet"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:id="@+id/relativeLayout11"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/ball"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ball"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/ball_word"
            android:layout_width="1000dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/ball_word"
            android:layout_below="@+id/ball"
            android:layout_alignParentStart="true"
            android:layout_marginTop="21dp" />/

        <Button
            android:id="@+id/Okw2"
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:onClick="Okw2"
            android:text="Learned"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>
    <EditText
        android:id="@+id/w2"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="63dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignBottom="@+id/relativeLayout11"
        android:layout_centerHorizontal="true" />
</RelativeLayout>

