<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anik.test.ActivityStart"
    >

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#78c5da"
        android:src="@drawable/reading" />

    <Button
        android:id="@+id/Alphabet"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/Word"
        android:layout_marginTop="110dp"
        android:background="@drawable/alphabet" />

    <Button
        android:id="@+id/Word"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_below="@+id/Alphabet"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="93dp"
        android:background="@drawable/word" />
</RelativeLayout>