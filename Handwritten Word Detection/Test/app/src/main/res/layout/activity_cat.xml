<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anik.test.ActivityAlphabet"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:id="@+id/relativeLayout11"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/cat"
            android:layout_width="200dp"
            android:layout_height="300dp"
            app:srcCompat="@drawable/cat"
            android:layout_above="@+id/cat_word"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/cat_word"
            android:layout_width="600dp"
            android:layout_height="50dp"
            android:layout_above="@+id/Okw3"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="95dp"
            app:srcCompat="@drawable/cat_word" />/

        <Button
            android:id="@+id/Okw3"
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:onClick="Okw3"
            android:text="Learned"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>
    <EditText
        android:id="@+id/w3"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="79dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginStart="124dp"
        android:layout_alignBottom="@+id/relativeLayout11"
        android:layout_alignParentStart="true" />
</RelativeLayout>

