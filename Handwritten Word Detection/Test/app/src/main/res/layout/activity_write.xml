<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ac_write"
    tools:context="com.example.anik.test.ActivityStart">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#79a74c"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/writea" />
    <Button
        android:id="@+id/Alphabet1"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_above="@+id/Word1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="@drawable/alphabet"
         />

    <Button
        android:id="@+id/Word1"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/Alphabet1"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/Alphabet1"
        android:layout_marginBottom="190dp"
        android:background="@drawable/word" />
</RelativeLayout>